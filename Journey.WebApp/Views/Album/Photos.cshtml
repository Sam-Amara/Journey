@model List<Journey.WebApp.Data.AlbumPhoto>

@{
    ViewData["Title"] = "Photos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Photos</h2>

<p>
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Upload Photo
    </button>
</p>
<div class="collapse" id="collapseExample">
    <div class="card card-body">
        @await Html.PartialAsync("_Photo", new Journey.WebApp.Models.PhotoViewModel())
    </div>
</div>

<div class="row">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <a href="@Model[i].Photo.FilePath" target="_blank">
                    <img src="@Model[i].Photo.Thumbnail" alt="..." style="width:100%; height:200px;">
                    <div class="caption">
                        <p>@(Model[i].Photo.PhotoName ?? $"Photo {i + 1}")</p>
                        <p> @Model[i].Photo.Loc </p>
                    </div>
                </a>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Index">Back to Albums</a>
    </div>
</div>
