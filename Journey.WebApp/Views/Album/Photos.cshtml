@model List<Journey.WebApp.Data.AlbumPhoto>
@{
    ViewData["Title"] = "Photos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Photos</h2>

@for (int i = 0; i < Model.Count; i++)
{

    @if (i % 3 == 0)
    {
        @Html.Raw("<div class=\"row\">");
    }
    <div class="col-md-4">
        <div class="thumbnail">
            <a href="Photos">
                <img src="@Model[i].Photo.Thumbnail" alt="..." style="width:100%; height:200px;">
                <div class="caption">
                    <p>@(Model[i].Photo.PhotoName ?? $"Photo {i+1}")</p>
                </div>
            </a>
        </div>
    </div>
    @if ((i == Model.Count - 1) || (i % 3 == 0 && i > 0))
    {
        @Html.Raw("</div>");
    }
}
