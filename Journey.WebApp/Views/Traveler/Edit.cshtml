@model Journey.WebApp.Models.ProfileViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>My Profile</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Traveler.Id" />
            <div class="form-group">
                <label asp-for="Traveler.FirstName" class="control-label"></label>
                <input asp-for="Traveler.FirstName" class="form-control" />
                <span asp-validation-for="Traveler.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveler.LastName" class="control-label"></label>
                <input asp-for="Traveler.LastName" class="form-control" />
                <span asp-validation-for="Traveler.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveler.Phone" class="control-label"></label>
                <input asp-for="Traveler.Phone" class="form-control" />
                <span asp-validation-for="Traveler.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveler.Dob" class="control-label"></label>
                <input asp-for="Traveler.Dob" class="form-control" />
                <span asp-validation-for="Traveler.Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveler.Gender" class="control-label"></label>
                <input asp-for="Traveler.Gender" class="form-control" />
                <span asp-validation-for="Traveler.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveler.Email2" class="control-label"></label>
                <input asp-for="Traveler.Email2" class="form-control" />
                <span asp-validation-for="Traveler.Email2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveler.AboutMe" class="control-label"></label>
                <input asp-for="Traveler.AboutMe" class="form-control" />
                <span asp-validation-for="Traveler.AboutMe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveler.Occupation" class="control-label"></label>
                <input asp-for="Traveler.Occupation" class="form-control" />
                <span asp-validation-for="Traveler.Occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveler.Hobbies" class="control-label"></label>
                <input asp-for="Traveler.Hobbies" class="form-control" />
                <span asp-validation-for="Traveler.Hobbies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveler.SocialMedia" class="control-label"></label>
                <input asp-for="Traveler.SocialMedia" class="form-control" />
                <span asp-validation-for="Traveler.SocialMedia" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Traveler.DateCreated" />
            <input type="hidden" asp-for="Traveler.UserId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group text-center">
                <img src="@(ViewBag.profilePic ?? "../../images/profile-placeholder.png")" class="rounded float-right" alt="Profile Pic" style="width:200px; height:200px;">
            </div>
            <div class="form-group text-center">
                <input type="file" class="glyphicon-open-file" asp-for="Upload">
                <label class="label">Choose image</label>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
